extends layout
block content

    // Wrapper
    #wrapper
    
        // LIST
        header Benutzer
        #list
            table
                thead
                    th ID
                    th Handynummer
                    th Timestamp
                    th delete?
                tbody
        // /LIST

        // INFO
        header Nachrichten
        #listInfo
            table
                thead
                    th ID
                    th Sender
                    th Empfänger
                    th Text
                    th Timestamp
                    th gelesen
                    th delete?
                tbody
        // /INFO

        // UPDATE DATA
        header Send Data
        #sendData
            fieldset
                input#inputSender(type='text', placeholder='Handynummer Sender')
                input#inputreceiver(type='text', placeholder='Handynummer Empfänger')
                input#inputData(type='text', placeholder='Text')
                br
                btnblue#btnSendData Send Data
        // /UPDATE DATA 

        // REGISTER USER
        header Register User
        #registerUser
            fieldset
                input#inputNumber(type='text', placeholder='Handynummer')
                br
                btnblue#btnRegisterUser Register User
        // /REGISTER USER

        // GET DATA
        header Get Data
        #getData
            fieldset
                input#inputNumber(type='text', placeholder='Handynummer')
                br
                btnblue#btnGetData Get Data
        // /GET DATA
        // GET DATA SENDED		
        header Get Data Sended
        #getDataSended
            fieldset
                input#inputNumber(type='text', placeholder='Handynummer')
                br
                btnblue#btnGetDataSended Get Data
        // /GET DATA
    // /WRAPPER
